<% @jobs = ["chef", "builder", "doctor", "firefighter", "mechanic", "policeman", "scientist", "teacher"] %>

<div class="row">
	<div class="column small-10 small-centered">
		<div class="text-center">
			<br>
			<br>
			<br>
			<br>
			<h1 class="first">So what do you want to be when you grow up?</h1>
		</div>
	</div>
</div>

<div class="row full2">
	<div class="column small-12 small-center">
		<div class="row">
			<ul class="small-block-grid-8 large-block-grid-8" data-equalizer>
			<% @jobs.each do |id| %>
			<li>
				<a href="<%= locations_path(params.merge(job: id).except(:action, :controller))%>" class="text-center">
					<% image_id = id + ".png" %>
					<%= image_tag image_id, data: { equalizer_watch: ''}, class: "shadow" %><h4><%= id %></h4></a></li>
			<% end %>
			</ul>
		</div>
	</div>
</div>